*.md
README
docs/
*.txt
!requirements.txt
!runtime.txt
!Procfile

# Test files
test_*.py
*_test.py
tests/
__pycache__/
*.pyc
*.pyo
*.pyd
.pytest_cache/

# Development files
.env
.env.*
!.env.example
.vscode/
.idea/
*.swp
*.swo
*~

# Git
.git/
.gitignore
.gitattributes

# CI/CD
.github/
.gitlab-ci.yml
.travis.yml

# Docker (if using Heroku, not Docker)
Dockerfile
docker-compose.yml
.dockerignore

