# SmartPath Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================================
# APPLICATION SETTINGS
# ======================================
APP_NAME=SmartPath API
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# ======================================
# SERVER CONFIGURATION
# ======================================
HOST=0.0.0.0
PORT=8000

# ======================================
# DATABASE CONFIGURATION
# ======================================
# Local PostgreSQL
DATABASE_URL=postgresql://postgres:root@localhost:5432/smartpath

# Optional: Supabase connection (for production)
# SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ======================================
# AUTHENTICATION
# ======================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-replace-with-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days in minutes

# ======================================
# AI/ML CONFIGURATION
# ======================================
# Google AI (Gemini) API Key - Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ======================================
# FILE UPLOAD CONFIGURATION
# ======================================
# Maximum file size for uploads (in bytes) - Default: 10MB
MAX_FILE_SIZE=10485760
# Upload directory (relative to project root)
UPLOAD_DIR=uploads

# ======================================
# SECURITY SETTINGS
# ======================================
# Enable security headers (recommended for production)
ENABLE_SECURITY_HEADERS=True

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Production settings
# TRUSTED_HOSTS=your-app-domain.com,api.your-app-domain.com
# ENVIRONMENT=production
# DEBUG=False

# ======================================
# EXTERNAL INTEGRATIONS
# ======================================
# Optional: Email service configuration (for future features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Redis configuration (for caching/session management)
# REDIS_URL=redis://localhost:6379
# REDIS_DB=0

# ======================================
# MONITORING & LOGGING
# ======================================
# Optional: Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
